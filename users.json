import json

def save_users(users):
    with open("users.json", "w", encoding="utf-8") as f:
        json.dump(users, f)

def load_users():
    try:
        with open("users.json", "r", encoding="utf-8") as f:
            return json.load(f)
    except (FileNotFoundError, json.JSONDecodeError):
        return []
